<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/ba">

        <EditText android:id="@+id/inputSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Famille.."
            android:inputType="textVisiblePassword"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/stock"
                />
            <TextView android:id="@+id/titre"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:textSize="20px"
                android:textStyle="bold"
                android:text="Référence"/>
            <TextView android:id="@+id/titre1"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:textSize="20px"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Nom"/>
            <TextView android:id="@+id/titre2"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:textStyle="bold"
                android:textSize="20px"
                android:layout_marginLeft="10dp"
                android:text="Qte min"/>
            <TextView android:id="@+id/titre3"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:textSize="20px"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Qte"/>
            <TextView android:id="@+id/titre4"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:textStyle="bold"
                android:textSize="20px"
                android:layout_marginLeft="10dp"
                android:text="Prix"/>
            <TextView android:id="@+id/titre5"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:textStyle="bold"
                android:textSize="20px"
                android:layout_marginLeft="10dp"
                android:text="Famille"/>
            <TextView android:id="@+id/titre6"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:textStyle="bold"
                android:textSize="20px"
                android:layout_marginLeft="10dp"
                android:text="Date"/>
            <TextView android:id="@+id/titre7"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:textStyle="bold"
                android:textSize="20px"
                android:layout_marginLeft="10dp"
                android:text="Fournisseur"/>


    </LinearLayout>

</HorizontalScrollView>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ListView
                android:id="@+id/mainList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#819FF7"/>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>


